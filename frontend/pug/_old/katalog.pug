extends ./layout/layout.pug

block variables
    - var title = 'Katalog'

block header
    include ./layout/header

block main

    main.main

        section.teaser.com
            .container
                .in.d-flex.align-items-center.flex-column.pb-8
                    include ./partials/breadcrumbs
                    h1.text-center Prodej <i>měřících strojů</i>

        .spacer.pt-5

        section
            .container
                .row
                    .col-md-4.col-lg-3
                        include ./partials/sidemenu

                    .col-md-8.col-lg-9
                        .row
                            - var i = 0
                            while i < 9
                                .col-6.col-lg-4.mb-4.mb-md-5
                                    a(href="./detail.html").card.card-product.com.--type-1.shadow-primary
                                        +placeholder(264, 328, "", "w-100")
                                        .card-body
                                            h2.h6.card-title Souřadnicový měřící CNC stroj Azimuth 1200-1600
                                            .card-text.small
                                                ul
                                                    li Rozsah 1 200 - 1 600 nm
                                                    li Rozlišení 0,5 nm
                                                    li Rozsah provozních teplot 0-45°C
                                - i++

                        .spacer.pt-5

                        .row
                            .col-12
                                include ./forms/form-contact-small

        .spacer.pt-7

        section
            .container
                .row
                    .col-md-3
                    .col-md-9
                        h4.mb-4.font-weight-light Mohlo by vás zajímat

        section
            .container
                include ./partials/slider-products

        .spacer.pt-7