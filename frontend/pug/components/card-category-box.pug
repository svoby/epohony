mixin card-category-box($item)
    .card
        a(href="./catalog.html").card-header.d-flex.justify-content-between.align-items-center.bg-gradient-primary.text-white.text-none.hover-secondary.transition-primary.min-h-md-96
            h3.h6.mb-0.text-uppercase.line-h-120.text-white.text-current.hover-secondary !{$item[0]}
            img(width="32" src= $imgDir + $item[1]).ml-4
        .card-body.bg-white.py-3.px-4
            ul.nav.small
                - var $i = 0
                while $i < 4
                    li.w-100
                        if $i < 3
                            a(href="./catalog.html").d-flex.justify-content-between.align-items-center.text-dark.py-2 Category item #{$i}
                                +sprite("chevron-right", "sx-8 ml-4")
                        else 
                            a(href="./catalog.html").d-flex.justify-content-between.align-items-center.py-2.text-primary.text-uppercase.font-weight-bold All in category
                                +sprite("chevron-right", "sx-8 ml-4")
                    -$i++