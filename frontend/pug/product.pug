extends ./layout/layout.pug

block variables
    - var title = 'Product'

block main

        .spacer.pt-4.pt-md-5

        .container
            .row
                //-- Left column
                .col-lg-3.mt-6.mt-lg-0.order-1.order-lg-0
                    include ./partials/sidemenu-category

                //-- Right column
                .col-lg-9

                    section
                        include  ./partials/breadcrumbs

                    section
