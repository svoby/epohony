                                    p Health goth butcher activated charcoal portland next level pitchfork mumblecore man braid iPhone plaid mlkshk. Prism intelligentsia forage poutine.
                                .tab-content.py-4
                                    p ...
                                .tab-content.py-4
                                    p ...
                                .tab-content.py-4
                                    p ...
                        .spacer.pt-6

        section
            .spacer.pt-6
            .container
                h3 Alternativní produkty
                .row
                    each $item in $Data.productsAlternatives[1]
                        .col-md-6.col-lg-3.mb-4.mb-lg-0
                            +card-product-alt($item, $Data.productsAlternatives[0])

        section
            .spacer.pt-6
            .container
                h3 Příslušenství
                .row
                    each $item in $Data.productsAlternatives[1]
                        .col-md-6.col-lg-3.mb-4.mb-lg-0
                            +card-product-alt($item, $Data.productsAlternatives[0])

        .spacer.pt-7