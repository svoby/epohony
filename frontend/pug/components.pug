                                                        +sprite("chevron-right", "sx-8 ml-4")
                                                else 
                                                    a(href="#!").d-flex.justify-content-between.align-items-center.py-2.text-primary.text-uppercase.font-weight-bold All in category
                                                        +sprite("chevron-right", "sx-8 ml-4")
                                            -$i++
            .spacer.py-5

        .spacer.pt-5.border-top

        section#spacers
            .container
                h2.h4 Spacers
                button.btn.btn-secondary.mb-5(data-toggle="collapse", data-target="#collapseSpacers") Show spacers
