                                .icon-box.com.s-64.border.border-dashed.rounded-circle
                                    +sprite("mail-open", "s-40 text-primary")
                            div
                                h2.h4.mb-5 Fakturační<br> adresa
                                p
                                    | TM Technik s. r. o.<br>
                                    | Dornych 54/47, Brno 617 00<br>
                                    | IČ: 26889927<br>
                                    | DIČ: CZ26889927

        .spacer.pt-7

        section.bg-stripes-down

            .spacer.pt-7

            .container
                include ./forms/form-contact

            .spacer.pt-7